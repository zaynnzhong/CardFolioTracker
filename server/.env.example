# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/cardfolio

# Firebase Admin SDK
# Get this from Firebase Console > Project Settings > Service Accounts > Generate Private Key
# The entire JSON file content goes here (minified, no line breaks)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# ImageKit Configuration - Server (Backend)
# Get these from https://imagekit.io/dashboard/developer/api-keys
# IMPORTANT: Private key should NEVER be exposed to the client
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key

# Email Configuration (SMTP)
# For SendGrid SMTP
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
EMAIL_FROM=noreply@prism-cards.com
