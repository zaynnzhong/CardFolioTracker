# Firebase Configuration - Frontend
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Production URL (for email link authentication to work cross-device)
# Example: https://prism-cards.com (without trailing slash)
VITE_APP_URL=https://prism-cards.com

# API URL Configuration
# For local development, use http://localhost:3001
# For production, set this to your deployed API URL (e.g., https://prism-cards.com)
VITE_API_URL=http://localhost:3001

# ImageKit Configuration - Frontend (Client-side)
# Get these from https://imagekit.io/dashboard/developer/api-keys
VITE_IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
VITE_IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id
VITE_IMAGEKIT_AUTH_ENDPOINT=http://localhost:3001/api/imagekit/auth
VITE_IMAGEKIT_UPLOAD_ENDPOINT=http://localhost:3001/api/imagekit/upload

# RevenueCat API Keys (for in-app purchases)
# Get these from https://app.revenuecat.com → Project Settings → API Keys
VITE_REVENUECAT_API_KEY_IOS=your_ios_api_key_here
VITE_REVENUECAT_API_KEY_ANDROID=your_android_api_key_here
